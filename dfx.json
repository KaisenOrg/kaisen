{
  "version": 1,
  "canisters": {
    "kai_backend": {
      "type": "motoko",
      "main": "backend/kai/main.mo"
    },
    "kaizen_frontend": {
      "type": "assets",
      "build": "npm install && npm run build",
      "source": ["out"],
      "declarations": {
        "output": "declarations"
      }
    }
  },
  "defaults": {
    "build": {
      "packtool": "",
      "args": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    }
  }
}